<section id="songListButtons">
  <h2>Request a Song!</h2>

  <table id="songTable" style="width:100%">
      <tr>
        <th>Song Name</th>
        <th>Artist</th>
        <th>Request?</th>
      </tr>
      <form id="requestForm">
        {{#each songs}}
          <tr>
            <td>{{song_name}}</td>
            <td>{{artist}}</td>
            <td>
              <label>
                  <input type="radio" name="songIds" value="{{id}}" class="with-gap"/>
                  <span></span>
              </label>
            </td>
          </tr>
        {{/each}}
        <div class="d-flex justify-content-center">
          <button class="btn btn-dark text-center" type="submit">Request Song</button>
        </div>
      </form>
  </table>  
</section>

<script src="./js/requests.js"></script>
